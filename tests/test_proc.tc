REM Procedure demonstration

PROC greet name
  PRINT "Hello, " + name + "!"
ENDPROC

PROC square n
  RETURN n * n
ENDPROC

PROC factorial n
  IF n <= 1 THEN RETURN 1
  LET prev = 0
  CALL factorial n - 1 INTO prev
  RETURN n * prev
ENDPROC

CALL greet "World"
CALL square 7 INTO result
PRINT "7 squared = " + str(result)
CALL factorial 5 INTO fact
PRINT "5! = " + str(fact)
