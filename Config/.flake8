[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    .venv,
    venv,
    env,
    legacy,
    platforms/*/build,
    platforms/*/dist
per-file-ignores =
    __init__.py:F401
max-complexity = 10
