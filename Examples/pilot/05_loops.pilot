PRINT ===== COUNT UP LOOP =====
COMPUTE counter 1
*count_up_loop
MATCH $counter
    CASE 11:
        JUMP count_up_done
    DEFAULT:
        PRINT $counter
        COMPUTE counter $counter + 1
        JUMP count_up_loop
END

*count_up_done
PRINT

PRINT ===== COUNTDOWN =====
COMPUTE countdown 10
*countdown_loop
MATCH $countdown
    CASE 0:
        JUMP countdown_done
    DEFAULT:
        PRINT Countdown: $countdown
        COMPUTE countdown $countdown - 1
        JUMP countdown_loop
END

*countdown_done
PRINT Blastoff!
