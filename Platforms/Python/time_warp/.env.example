# Time Warp IDE Server Configuration
# Development environment variables

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENV=development
WORKERS=1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/time_warp
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
SQL_ECHO=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Socket.io Configuration
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25
SOCKETIO_MAX_HTTP_BUFFER_SIZE=1000000

# Redis Configuration (optional, for scaling)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=false

# Authentication (optional)
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Features
ENABLE_PERSISTENCE=true
ENABLE_SNAPSHOTS=true
ENABLE_CONFLICT_TRACKING=true
ENABLE_ANALYTICS=false
