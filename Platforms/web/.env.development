# Time Warp IDE - Frontend Environment Configuration
# Development environment variables for Phase 4.5 Collaboration

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=http://localhost:8000

# Feature Flags
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_OT_SYNC=true
VITE_ENABLE_PRESENCE=true
VITE_ENABLE_CHAT=true

# WebSocket Configuration
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=1000
VITE_WS_TIMEOUT=10000

# Sync Configuration
VITE_SYNC_INTERVAL=5000
VITE_SYNC_TIMEOUT=30000

# Editor Configuration
VITE_EDITOR_TAB_SIZE=2
VITE_EDITOR_WORD_WRAP=on
VITE_EDITOR_FONT_SIZE=14

# UI Configuration
VITE_MAX_COLLABORATORS_DISPLAY=10
VITE_CURSOR_UPDATE_INTERVAL=500
VITE_TYPING_INDICATOR_TIMEOUT=3000

# Debug Configuration
VITE_DEBUG_ENABLED=false
VITE_DEBUG_WS_EVENTS=false
VITE_DEBUG_OT_OPERATIONS=false
