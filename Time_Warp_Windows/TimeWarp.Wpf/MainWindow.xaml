<Window x:Class="TimeWarp.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Time Warp IDE (Windows)" Height="720" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Background="#EEE" Padding="6">
            <TextBlock Text="Time Warp IDE" FontWeight="Bold"/>
            <Separator Width="12" Background="Transparent"/>
            <ComboBox Width="160" x:Name="LanguageCombo" SelectedIndex="0">
                <ComboBoxItem Content="BASIC"/>
                <ComboBoxItem Content="Logo"/>
                <ComboBoxItem Content="PILOT"/>
            </ComboBox>
            <Separator Width="12" Background="Transparent"/>
            <Button Content="Run" Click="Run_Click"/>
            <Separator Width="6" Background="Transparent"/>
            <Button Content="Clear" Click="Clear_Click"/>
        </DockPanel>

        <Grid Grid.Row="1" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Code" FontSize="12"/>
                <TextBox x:Name="CodeBox" Grid.Row="1" FontFamily="Consolas" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Output" FontSize="12"/>
                <ScrollViewer Grid.Row="1">
                    <TextBlock x:Name="OutputText" FontFamily="Consolas" TextWrapping="Wrap"/>
                </ScrollViewer>
                <Border Grid.Row="2" BorderBrush="#CCC" BorderThickness="1">
                    <Canvas x:Name="TurtleCanvas" Background="White"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
